    <form action="/post" method="post">
        <div class="conatiner-fluid content-inner mt-n5 py-0">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header ">
                            <div class="header-title d-flex justify-content-end">
                                <!-- <h4 class="card-title">Bootstrap Datatables</h4> -->
                                <button class="btn btn-primary mb-2 " type="button" data-bs-toggle="modal"
                                    data-bs-target="#CreateLeaveAlternative"> Create Staff Record </button>

                                <!-- Modal -->
                                <div class="modal fade" id="CreateLeaveAlternative" tabindex="-1"
                                    aria-labelledby="CreateLeaveAlternativeLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="CreateLeaveAlternativeLabel">Create Leave
                                                    Alternative</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                    aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body text-start">
                                                <div class="form-group">
                                                    <div class="mb-3">
                                                        <label for="input-form" class="form-label">Staff Name</label>
                                                        <input type="text" name="staffName" value=""
                                                            class="form-control" id="input-form"
                                                            aria-describedby="emailHelp">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="mb-3">
                                                        <label for="input-form" class="form-label">Age</label>
                                                        <input type="text" name="age" value="" class="form-control"
                                                            id="input-form" aria-describedby="emailHelp">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="mb-3">
                                                        <label for="input-form" class="form-label">Address</label>
                                                        <input type="text" name="address" value="" class="form-control"
                                                            id="input-form" aria-describedby="emailHelp">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="mb-3">
                                                        <label for="input-form" class="form-label">Role</label>
                                                        <input type="text" name="role" value="" class="form-control"
                                                            id="input-form" aria-describedby="emailHelp">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="mb-3">
                                                        <label for="input-form" class="form-label">Contact</label>
                                                        <input type="text" name="contact" value="" class="form-control"
                                                            id="input-form" aria-describedby="emailHelp">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="mb-3">
                                                        <label for="input-form" class="form-label">Qualification</label>
                                                        <input type="text" name="qualification" value=""
                                                            class="form-control" id="input-form"
                                                            aria-describedby="emailHelp">
                                                    </div>
                                                </div>

                                                <div id="Result" class="m-3">

                                                </div>


                                            </div>
                                            <div class="modal-footer">

                                                <button id="postFormBtn" class="btn btn-primary"
                                                    type="submit">Post</button>
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            

                            </div>
                        </div>
                
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="datatable" class="table table-striped" data-toggle="data-table">
                                    <thead>
                                        <tr>
                                            <th>Staff Name</th>
                                            <th>Age</th>
                                            <th>Address</th>
                                            <th>Role</th>
                                            <th>Qualification</th>
                                            <th>Contact</th>
                                            <th>Edit</th>
                                            <th>delete</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% posts.forEach(post=> { %>
                                            <tr>
                                                <td>
                                                    <%= post.staffName %>
                                                </td>
                                                <td>
                                                    <%= post.age %>
                                                </td>
                                                <td>
                                                    <%= post.address %>
                                                </td>
                                                <td>
                                                    <%= post.role %>
                                                </td>
                                                <td>
                                                    <%= post.qualification %>
                                                </td>
                                                <td>
                                                    <%= post.contact %>
                                                </td>
                                                <td>
                                                    <div class="editBtn">
                                                        <a href="/edit/<%= post._id %>">Edit</a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="delete-btn">
                                                        <form action="/userUpdation/deletePost" method="post">
                                                            <a href="" onclick="this.parentNode.submit();"><i
                                                                    class="fa-solid fa-trash"
                                                                    src="../public/images/delete-icon.svg"
                                                                    style="color: #230303; float: right;"></i></a>
                                                            <input type="text" value='<%=post._id %>' name="postId"
                                                                hidden>
                                                        </form>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <div id="Result" class="m-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <script>
        function exportHTMLtoPDF() {
           let htmlElement = document.getElementById('content');
  
           html2pdf().from(htmlElement).save('exported_file.pdf');
        }
  
        document.getElementById('exportButton').addEventListener('click', exportHTMLtoPDF);
     </script>



